@{
    ViewBag.Title = "About";
}
<h2>@ViewBag.Title.</h2>
<p>@ViewBag.Message</p>
<h4>Name : @ViewBag.Name</h4>
<h4>Login Name : @ViewBag.LoginName</h4>
<h4>Email : @ViewBag.Email</h4>

<p>Use this area to provide additional information.</p>

@model System.Security.Claims.ClaimsPrincipal

<dl>
    @foreach (var claim in Model.Claims)
    {
        <dt>@claim.Type</dt>
        <dd>@claim.Value</dd>
}
</dl>

<hr />

<h3>Roles.</h3>

<p>
    In Anonymous Role: @Model.IsInRole("Anonymous").ToString()
    <br />
    In Manager Role: @Model.IsInRole("Manager").ToString()
    <br />
    In Global Admin Role: @Model.IsInRole("Admin").ToString()
</p>
